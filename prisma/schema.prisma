generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "cockroachdb"
  url      = env("DATABASE_URL")
}

model Collections {
  id              BigInt @id @default(autoincrement())
  anime_mal_id    String
  user_email      String
  anime_image     String?
  anime_title     String?

  @@unique([user_email, anime_mal_id])
}

model Comments {
  id              BigInt @id @default(autoincrement())
  anime_mal_id    String
  user_email      String
  user_image      String
  comment         String
  username        String
  anime_title     String
  
}